{
  "compilerOptions": {
    "outDir": "build/scripts",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}